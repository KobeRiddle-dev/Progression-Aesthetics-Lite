<?xml version="1.0" encoding="utf-8" ?>
<Patch>
      <Operation Class="PatchOperationReplace">
        <xpath>Defs/*[designationCategory="WhaleysProps"]/designationCategory</xpath>
        <value>
        <designationCategory>Misc</designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationRemove">
        <success>Always</success>
        <xpath>Defs/designationCategoryDef[defName="WhaleysProps"]</xpath>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="WH_GreenLamp"]/label</xpath>
        <value>
            <label>Reading lamp</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="WH_GreenLamp"]/description</xpath>
        <value>
            <description>A classy low-light option for a small area.</description>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="WH_GreenLamp"]/costList</xpath>
        <value>
            <costList><Steel>15</Steel></costList>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="WH_GreenLamp"]/designationCategory</xpath>
        <value>
            <designationCategory>Furniture</designationCategory>
        </value>
    </Operation>
</Patch>
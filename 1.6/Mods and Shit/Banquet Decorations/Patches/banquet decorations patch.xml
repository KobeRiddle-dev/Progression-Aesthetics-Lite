<!-- Sign integration -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Signs and Comments</li>
		</mods>
		<match Class="PatchOperationSequence">
    <operations>

      <li Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="BanquetSignage"]</xpath>
        <value>
          <drawGUIOverlay>true</drawGUIOverlay>
        </value>
      </li>

      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="BanquetSignage"]/comps</xpath>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="BanquetSignage"]</xpath>
          <value>
            <comps>
              <li Class="Dark.Signs.CompProperties_Sign">
                <canEditContent>true</canEditContent>
                <canBeEmpty>true</canBeEmpty>
                <defaultContents></defaultContents>
              </li>
            </comps>
          </value>
        </nomatch>
        <match Class="PatchOperationAdd">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="BanquetSignage"]/comps</xpath>
          <value>
            <li Class="Dark.Signs.CompProperties_Sign">
              <canEditContent>true</canEditContent>
              <canBeEmpty>true</canBeEmpty>
              <defaultContents></defaultContents>
            </li>
          </value>
        </match>
      </li>

    </operations>
		</match>
	</Operation>






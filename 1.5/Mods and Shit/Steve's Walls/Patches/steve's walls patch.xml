<?xml version="1.0" encoding="utf-8" ?>
<Patch> 
<!-- Rebuild glass integration -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReBuild: Doors and Corners</li>
		</mods>
		<match Class="PatchOperationSequence">
		<success>Always</success>	
			<operations>
				<li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="SW_GlitterGlassWallBase"]/costList</xpath>
                    <value>
                        <costList>
                            <Steel>4</Steel>
                            <RB_Glass>2</RB_Glass>
                        </costList>
                    </value>
				</li>
			</operations>
		</match>	
	</Operation>





<!-- Nerfing -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="SW_GlitterGlassWallBase"]/statBases/MaxHitPoints</xpath>
        <value>
            <MaxHitPoints>320</MaxHitPoints>
        </value>
    </Operation>


<!-- Research -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ResearchProjectDef[defName="GlitterGlassResearch"]/label</xpath>
        <value>
            <label>illuminated glass walls</label>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ResearchProjectDef[defName="GlitterGlassResearch"]/description</xpath>
        <value>
            <description>Highly customizable advanced walls, capable of warning of hostile presences and taking a good amount of damage.</description>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ResearchProjectDef[defName="GlitterGlassResearch"]/prerequisites</xpath>
        <value>
            <prerequisites>
                <li>Electricity</li>
                <li>MicroelectronicsBasics</li>
            </prerequisites>
        </value>
    </Operation>


